<TypeExpansionPanel@MDExpansionPanel>:
    id: type_expansion_panel
    
    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Type"
                
            FilterIconButton:
                on_release: self.tap_expansion_chevron(type_expansion_panel)

    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "language-html5"
                
            MDListItemSupportingText:
                text: "HTML5"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "download-box"
                
            MDListItemSupportingText:
                text: "Downloadable"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "alpha-f"
                
            MDListItemSupportingText:
                text: "Flash"
