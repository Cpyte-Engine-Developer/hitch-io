<MultiplayerFeaturesExpansionPanel@MDExpansionPanel>:
    id: multiplayer_features_expansion_panel

    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Multiplayer features"
                
            FilterIconButton:
                on_release: self.tap_expansion_chevron(multiplayer_features_expansion_panel)
    
    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "lan-connect"
                
            MDListItemSupportingText:
                text: "Local multiplayer"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "server"
                
            MDListItemSupportingText:
                text: "Server-based networked multiplayer"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "ip"
                
            MDListItemSupportingText:
                text: "Ad-hoc networked multiplayer"
