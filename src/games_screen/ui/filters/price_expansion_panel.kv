<PriceExpansionPanel@MDExpansionPanel>:
    id: price_expansion_panel

    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Price"
            
            FilterIconButton:
                on_release: self.tap_expansion_chevron(price_expansion_panel)

    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "coffee"
                
            MDListItemSupportingText:
                text: "Free"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "sale"
                
            MDListItemSupportingText:
                text: "On Sale"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "contactless-payment-circle"
                
            MDListItemSupportingText:
                text: "Paid"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "currency-usd"
                
            MDListItemSupportingText:
                text: "$5 or less"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "currency-usd"
                
            MDListItemSupportingText:
                text: "$15 or less"
