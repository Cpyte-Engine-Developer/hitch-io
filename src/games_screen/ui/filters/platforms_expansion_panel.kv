<PlatformsExpansionPanel@MDExpansionPanel>:
    id: platforms_expansion_panel

    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Platforms"
                
            FilterIconButton:
                on_release: self.tap_expansion_chevron(platforms_expansion_panel)

    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "web"
                
            MDListItemSupportingText:
                text: "Browser"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "microsoft-windows"
                
            MDListItemSupportingText:
                text: "Windows"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "apple"
                
            MDListItemSupportingText:
                text: "macOS"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "linux"
                
            MDListItemSupportingText:
                text: "Linux"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "android"
                
            MDListItemSupportingText:
                text: "Android"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "apple-ios"
                
            MDListItemSupportingText:
                text: "iOS"
