<AverageSessionLengthExpansionPanel@MDExpansionPanel>:
    id: average_session_length_expansion_panel

    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Average session length"
                
            FilterIconButton:
                on_release: self.tap_expansion_chevron(average_session_length_expansion_panel)
    
    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "timer"
                
            MDListItemSupportingText:
                text: "A few seconds"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "timer-sand-empty"
                
            MDListItemSupportingText:
                text: "A few minutes"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "timer-sand"
                
            MDListItemSupportingText:
                text: "About a half-hour"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "timer-sand-full"
                
            MDListItemSupportingText:
                text: "About an hour"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "clock"
                
            MDListItemSupportingText:
                text: "A few hours"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "calendar-blank"
                
            MDListItemSupportingText:
                text: "Days or more"
                
