<WhenExpansionPanel@MDExpansionPanel>:
    id: when_expansion_panel
    
    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "When"
                
            FilterIconButton:
                on_release: self.tap_expansion_chevron(when_expansion_panel)

    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "calendar-today"
                
            MDListItemSupportingText:
                text: "Last Day"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "calendar-week"
                
            MDListItemSupportingText:
                text: "Last 7 days"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "calendar-month"
                
            MDListItemSupportingText:
                text: "Last 30 days"
