            MDListItemSupportingText:
                text: "High-contrast"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "cast-education"
                
            MDListItemSupportingText:
                text: "Interactive tutorial"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "radiobox-blank"
                
            MDListItemSupportingText:
                text: "One button"
                
        MDListItem:
