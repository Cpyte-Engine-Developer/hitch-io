<MiscExpansionPanel@MDExpansionPanel>:
    id: misc_expansion_panel

    MDExpansionPanelHeader:
        FilterHeaderListItem:
            MDListItemHeadlineText:
                text: "Misc"
            
            FilterIconButton:
                on_release: self.tap_expansion_chevron(misc_expansion_panel)
    
    FilterExpansionPanelContent:
        MDListItem:
            MDListItemLeadingIcon:
                icon: "steam"
                
            MDListItemSupportingText:
                text: "With Steam keys"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "controller"
                
            MDListItemSupportingText:
                text: "In game jams"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "controller-off"
                
            MDListItemSupportingText:
                text: "Not in game jams"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "play-circle"
                
            MDListItemSupportingText:
                text: "With demos"
                
        MDListItem:
            MDListItemLeadingIcon:
                icon: "star-box"
                
            MDListItemSupportingText:
                text: "Featured"
